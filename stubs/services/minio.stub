minio:
  image: 'minio/minio:latest'
  ports:
    - '${MINIO_PORT:-9000}:9000'
    - '${MINIO_CONSOLE_PORT:-8900}:8900'
  environment:
    MINIO_ROOT_USER: 'sail'
    MINIO_ROOT_PASSWORD: 'password'
  volumes:
    - 'sail-minio:/data'
  networks:
    - sail
  command: minio server /data --console-address ":8900"
  healthcheck:
    test: ["CMD", "mc", "ready", "local"]
    retries: 3
    timeout: 5s
